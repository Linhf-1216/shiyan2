<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 顶部标签栏（三等分，带图标占位，图标暂未提供则用橙色方块模拟） -->
    <TextView
        android:id="@+id/tab_space_stations"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Space Stations"
        android:textSize="14sp"
        android:gravity="center"
        android:drawableTop="@drawable/ic_satellite"
        android:drawablePadding="4dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tab_flights"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <TextView
        android:id="@+id/tab_flights"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Flights"
        android:textSize="14sp"
        android:gravity="center"
        android:drawableTop="@drawable/ic_rocket"
        android:drawablePadding="4dp"
        app:layout_constraintTop_toTopOf="@id/tab_space_stations"
        app:layout_constraintStart_toEndOf="@id/tab_space_stations"
        app:layout_constraintEnd_toStartOf="@id/tab_rovers"/>

    <TextView
        android:id="@+id/tab_rovers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rovers"
        android:textSize="14sp"
        android:gravity="center"
        android:drawableTop="@drawable/ic_rover"
        android:drawablePadding="4dp"
        app:layout_constraintTop_toTopOf="@id/tab_space_stations"
        app:layout_constraintStart_toEndOf="@id/tab_flights"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- DCA 区域 -->
    <TextView
        android:id="@+id/tv_dca"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#2E7D32"
        android:gravity="center"
        android:text="DCA"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/tab_space_stations"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_arrow_double"/>

    <!-- 双向箭头（垂直居中） -->
    <ImageView
        android:id="@+id/iv_arrow_double"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_arrow_double"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="@id/tv_dca"
        app:layout_constraintBottom_toBottomOf="@id/tv_dca"
        app:layout_constraintStart_toEndOf="@id/tv_dca"
        app:layout_constraintEnd_toStartOf="@id/tv_mars"/>

    <!-- MARS 区域 -->
    <TextView
        android:id="@+id/tv_mars"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#2E7D32"
        android:gravity="center"
        android:text="MARS"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/tab_space_stations"
        app:layout_constraintStart_toEndOf="@id/iv_arrow_double"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- One Way 标签 -->
    <TextView
        android:id="@+id/tv_one_way"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="#E67E22"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:text="One Way"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_dca"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 圆形选择器（纯色圆点） -->
    <View
        android:id="@+id/view_circle"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="#E67E22"
        android:layout_marginTop="19dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_dca"
        app:layout_constraintStart_toEndOf="@id/tv_one_way"/>

    <!-- 1 Traveller 标签 -->
    <TextView
        android:id="@+id/tv_traveller"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="#E67E22"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:text="1 Traveller"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_one_way"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 行星图标 -->
    <ImageView
        android:id="@+id/iv_planet"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_planet"
        android:scaleType="centerInside"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_traveller"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 火箭图标 -->
    <ImageView
        android:id="@+id/iv_rocket"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_rocket"
        android:scaleType="centerInside"
        android:layout_marginTop="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_traveller"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_planet"/>

    <!-- DEPART 按钮 -->
    <Button
        android:id="@+id/btn_depart"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="DEPART"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:background="#2E7D32"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>